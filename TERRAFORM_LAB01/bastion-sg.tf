# Create a Security Group that allows SSH from anywhere
resource "aws_security_group" "bastion_sg" {
  vpc_id = aws_vpc.main.id

  # Allow inbound SSH traffic from anywhere
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Allow all outbound traffic (default in AWS)
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "hosa-bastion-sg"
  }
}


